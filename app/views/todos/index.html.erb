<table class="table01">
  <thead>
    <tr>
      <th>登録日</th>
      <th>タスク</th>
      <th>内容</th>
      <th>期限</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @todos.each do |todo| %>
    <tr>
      <th>登録日：<%= todo.date %></th>
       <td label="タスク"><p><%= todo.title %></p></td>
       <td label="内容"><p><%= todo.body %></p></td>
       <td label="期限"><p><%= todo.deadline %></p></td>
       <td><%= link_to '詳細', todo %>｜
       <%= link_to '編集', edit_todo_path(todo) %>｜
       <%= link_to 'タスク削除', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
